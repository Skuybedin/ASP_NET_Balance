@model BalanceTest.Models.ViewModels.AddBalanceVM

@{
    string hashCode = Guid.NewGuid().ToString().GetHashCode().ToString("x") + Guid.NewGuid().ToString().GetHashCode().ToString("x");
}

    <form asp-controller="AddBalance" asp-action="Add" method="post">
        <input asp-for="AddBalance.TransactionId" type="text" hidden class="form-control" value="@hashCode" />
        <input asp-for="AddBalance.CreateData" type="text" hidden class="form-control" value="@DateTime.Now.ToString()" />
        <input asp-for="AddBalance.Status" type="text" hidden class="form-control" value="@Statuses.Processing" />

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Подать запрос</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AddBalance.UserId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="AddBalance.UserId" asp-items="@Model.UsersSelectList" class="form-control"> <!--Выпадающий список-->
                            <option selected disabled>--Выберите пользователя--</option>
                        </select>
                        <span asp-validation-for="AddBalance.UserId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AddBalance.Balance"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AddBalance.Balance" class="form-control" type="number" />
                        <span asp-validation-for="AddBalance.Balance" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100" value="Отправить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Назад</a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>
    </div>
</form>

<!--Валидация на стороне клиента-->
@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" />}

}